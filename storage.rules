// Firebase Storage Security Rules
// Deploy these rules to your Firebase console

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Documents folder - allow uploads for development (temporary)
    match /documents/{studentEmail}/{fileName} {
      // Allow read/write for development (you may want to restrict this in production)
      allow read, write: if true; // Temporarily open for development
      // TODO: Implement proper server-side authentication or use Firebase Admin SDK
      
      // Students can read their own documents (for future student app)
      allow read: if request.auth != null 
        && request.auth.token.email == studentEmail;
    }
  }
}
